@model IList<InforListViewModel>
@{
    int intson = 0;
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Datatable Informations</h6>
         <a asp-controller="Infor" asp-action="Create" class="btn btn-link btn-sm btn-rounded text-white btn-danger"><i class="fa fa-edit" aria-hidden="true"></i>Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>T/R</th>
                        <th>Name</th>
                        <th>Language</th>
                        <th>CreateDate</th>
                        <th>UpdateDate</th>
                        <th>Status</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        intson += 1;
                        <tr>
                            <td>
                                @intson
                            </td>
                            <td>@item.InforName</td>
                            <td>@item.LangName</td>
                            <td>@item.CreateDate</td>
                            <td>@item.UpdateDate</td>
                            <td>@item.InformationStatus</td>
                            <td>
                                <a href="#" class="btn btn-link btn-sm btn-rounded text-success"><i class="fa fa-edit" aria-hidden="true"></i> View</a>
                                <a asp-controller="Infor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-sm btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                <form class="btn btn-sm-1" asp-controller="Infor" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-link btn-rounded text-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody> 
            </table>

             <div class="container">
        @if (pager.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">
                @for (int pge = pager.StartPage; pge < pager.EndPage; pge++)
                {
                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "" )">
                        <a class="page-link" asp-controller="Infor" asp-action="List" asp-route-pg="@pge">@pge</a>
                    </li>
                }
                 @if (pager.CurrentPage < pager.TotalPages)
                {
                    
                    <li class="page-item">
                        <a class="page-link" asp-controller="Infor" asp-action="List" asp-route-pg="@pager.CurrentPage + 1">Next</a>
                    </li>
                      <li class="page-item">
                        <a class="page-link" asp-controller="Infor" asp-action="List" asp-route-pg="@pager.TotalPages">Last</a>
                    </li>

                }
            </ul>
        }
    </div>

        </div>
    </div>
</div>