@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer 
@model IList<ApplicationListViewModel>
@{
    Layout = "~/Views/Shared/Job/_Application.cshtml";
}
<section>
		<div class="block no-padding">
			<div class="container">
				 <div class="row no-gape">
				 	<aside class="col-lg-3 column border-right">
				 		<div class="widget">
				 			<div class="tree_widget-sec">
				 				<ul>				 					
				 					<li><a asp-action="ap404" asp-controller="App" title=""><i class="la la-paper-plane"></i>@localizer["Resumes"]</a></li>				 					
				 					<li><a asp-action="Create" asp-controller="Job" title=""><i class="la la-file-text"></i>@localizer["Post a New Job"]</a></li>				 					
				 					<li><a asp-controller="User" asp-action="ChangePassword" title=""><i class="la la-lock"></i>@localizer["Change Password"]</a></li>
				 					<li><a asp-action="ap404" asp-controller="App" title=""><i class="la la-unlink"></i>@localizer["Logout"]</a></li>
									 <li><a asp-action="List" asp-controller="Job" title=""><i class="la la-unlink"></i>@localizer["Job All"]</a></li>
				 				</ul>
				 			</div>
				 		</div>
				 	</aside>
				 	<div class="col-lg-9 column">
				 		<div class="padding-left">
					 		<div class="emply-resume-sec">
					 			<h3>@localizer["Resume"]</h3>
					 	    @foreach (var item in Model)
							{
								<div class="emply-resume-list">
					 				<div class="emply-resume-thumb">
					 					<img src="~/adminJob/images/21-211180_transparent-businessman-clipart-png-user-man-icon-png.png" alt="" />
					 				</div>
					 				<div class="emply-resume-info">
					 					<h3><a href="employer_resume.html#" title="">@item.FirstName</a></h3>
					 					<span><i>@item.JobCatName / @item.Phone</i> @localizer["Get in touch"]</span>
					 					<p>@localizer["Status"]: / @item.ApplicationStatus</p>
					 				</div>
					 				<div class="action-resume">
						 				<div class="action-center">
						 					<span>@localizer["Action"] <i class="la la-angle-down"></i></span>
						 					<ul>
						 						<li><a href="employer_resume.html#" title="">@localizer["Download CV"]</a></li>
						 						<li class="open-contact"><a href="employer_resume.html#" title="">@localizer["Send a Message"]</a></li>
						 					</ul>
						 				</div>
						 			</div>
						 			<div class="del-resume">
						 				<a href="employer_resume.html#" title=""><i class="la la-trash-o"></i></a>
						 		</div>
							    </div><!-- Emply List -->
							 }	 			
					 		</div>
					 	</div>
					</div>
				 </div>
			</div>
		</div>
	</section>