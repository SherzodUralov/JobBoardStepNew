@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer 
@model List<JobListViewModel>
@{
    Layout = "~/Views/Shared/Job/_EmpMenage.cshtml";
}
<section>
		<div class="block no-padding">
			<div class="container">
				 <div class="row no-gape">
				 	<aside class="col-lg-3 column border-right">
				 		<div class="widget">
				 			<div class="tree_widget-sec">
				 				<ul>				 					
				 					<li><a href="employer_resume.html" title="">@localizer["Resumes"]</a></li>				 					
				 					<li><a asp-action="Create" asp-controller="Job" title="">@localizer["Post a New Job"]</a></li>				 					
				 					<li><a asp-controller="User" asp-action="ChangePassword" title="">@localizer["Change Password"]</a></li>
				 					<li><a href="employer_manage_jobs.html#" title="">@localizer["Logout"]</a></li>
									 <li><a asp-action="List" asp-controller="Job" title="">@localizer["Job All"]</a></li>
				 				</ul>
				 			</div>
				 		</div>
				 	</aside>
				 	<div class="col-lg-9 column">
				 		<div class="padding-left">
					 		<div class="manage-jobs-sec">
						 		<table>
						 			<thead>
						 				<tr>
						 					<td>@localizer["Title"]</td>
						 					<td>@localizer["Applications"]</td>
						 					<td>@localizer["Created & Expired"]</td>
						 					<td>@localizer["Status"]</td>
						 					<td>@localizer["Action"]</td>
						 				</tr>
						 			</thead>
						 			<tbody>
										 @foreach (var item in Model)
									{
										<tr>
						 					<td>
						 						<div class="table-list-title">
						 							<h3><a href="employer_manage_jobs.html#" title="">@localizer["Category"]: @item.JobCatName</a></h3>
						 							<span>@localizer["Job Type"]: @item.JobTypeName</span>
						 						</div>
						 					</td>
						 					<td>
						 						<span class="applied-field">3+ <a asp-action="List" asp-controller="App" asp-route-id="@item.JobId">@localizer["Application"]</a></span>
						 					</td>
						 					<td>
						 						<span>@item.CareateDate</span><br />
						 						<span>@localizer["Uzbekiston"]</span>
						 					</td>
						 					<td>
						 						<span class="status active">@localizer["Active"]</span>
						 					</td>
						 					<td>
						 						<ul class="action_job">
						 							<li><span>@localizer["View Job"]</span><a asp-action="List" asp-controller="Job" title=""><i class="la la-eye"></i></a></li>
						 							<li><span>@localizer["Edit"]</span><a asp-action="Edit" asp-controller="Job" title=""><i class="la la-pencil"></i></a></li>
						 							<li><span>@localizer["Delete"]</span><a asp-action="Delete" asp-controller="Job" title=""><i class="la la-trash-o"></i></a></li>
						 						</ul>
						 					</td>
						 				</tr>
									}					 				

						 			</tbody>
						 		</table>
					 		</div>
					 	</div>
					</div>
				 </div>
			</div>
		</div>
	</section>
