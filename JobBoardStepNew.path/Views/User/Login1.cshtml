@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer 
@model Login1ViewModel
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

 <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                     <div class="col-lg-6">
                     <img src="~/Images/micah-williams-lmFJOx7hPc4-unsplash.jpg"
                     asp-append-version="true"
                     style="width: 470px; height: 500px; object-fit: cover;"
                     class="rounded"
                     id="preview"
                     />
                    </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">@localizer["Welcome Back!"]</h1>
                                    </div>
                                    <form asp-controller="User" asp-action="Login1" method="post">
                                        <div class="form-group">
                                            <input asp-for="PhoneOrEmail" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="@localizer["Phone Or Email"]">
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Password" type="password" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="@localizer["Password"]">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">@localizer["Remember Me"]</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            @localizer["Login"]
                                        </button>
                                        <hr>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> @localizer["Login with Google"]
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-controller="User" asp-action="ChangePassword">@localizer["Forgot Password?"]</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" aasp-controller="User" asp-action="Regestir">@localizer["Create an Account!"]</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>