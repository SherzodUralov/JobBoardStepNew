@model List<UserListViewModel>
@{
    int intson = 0;
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Datatable Information</h6>
         <a asp-controller="User" asp-action="Create" class="btn btn-link btn-sm btn-rounded text-white btn-danger"><i class="fa fa-edit" aria-hidden="true"></i>Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>T/R</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>MiddleName</th>
                        <th>Email</th>
                        <th>PassportNumber</th>
                        <th>BirthDate</th>
                        <th>CreateDate</th>
                        <th>Region</th>
                        <th>UserType</th>
                        <th>InformatTName</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        intson += 1;
                        <tr>
                            <td>
                                @intson
                            </td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.MiddleName</td>
                            <td>@item.Email</td>
                            <td>@item.PassportNumber</td>
                            <td>@item.BirthDate</td>
                            <td>@item.CreateDate</td>
                            <td>@item.Region</td>
                            <td>@item.UserType</td>
                            <td>@item.InformatTName</td>
                            <td>
                                <a href="#" class="btn btn-link btn-sm btn-rounded text-success"><i class="fa fa-edit" aria-hidden="true"></i> View</a>
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-link btn-sm btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                <form class="btn btn-sm-1" asp-controller="User" asp-action="Delete" asp-route-id="@item.UserId" method="post">
                                    <button type="submit" class="btn btn-link btn-rounded text-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody> 
            </table>
        </div>
    </div>
</div>