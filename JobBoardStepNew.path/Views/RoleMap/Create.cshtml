@model RoleMapViewModel
<div class="row">
    <div class="col-md-12">
        <form asp-controller="RoleMaping" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="RoleId">RoleName</label>
                <select asp-for="RoleId" class="form-control" asp-items="@ViewBag.role">
                    <option value="">Choose select...</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                 <label asp-for="UserId" >UserName</label>
                 <select asp-for="UserId" class="form-control" asp-items="@ViewBag.user">
                     <option value="">Choose select...</option>
                 </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>