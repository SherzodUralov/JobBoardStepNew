@model IEnumerable<MapIndexViewModel>
@{
    int intson = 0;
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@User.Identity.Name</h6>
    </div>
        <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Datatable Roles and Users</h6>
         <a asp-controller="RoleMap" asp-action="Create" class="btn btn-link btn-sm btn-rounded text-white btn-danger"><i class="fa fa-edit" aria-hidden="true"></i>Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr style="text-align:center">
                        <th>T/R</th>
                        <th>FirstName</th>
                        <th>UserName</th>
                        <th>RoleName</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        intson += 1;
                        <tr style="text-align:center">
                            <td>
                                @intson
                            </td>
                            <td>@item.FirstName</td>
                            <td>@item.UserName</td>
                            <td>@item.RoleName</td>
                            <td>
                                <a  class="btn btn-link btn-sm btn-rounded text-success"><i class="fa fa-edit" aria-hidden="true"></i> View</a>
                                <a  asp-controller="Resum" asp-action="Details" asp-route-id="" class="btn btn-link btn-sm btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                <form asp-controller="Resum" asp-action="Delete" asp-route-id="" class="btn btn-sm-1"  method="post">
                                    <button type="submit" class="btn btn-link btn-rounded text-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody> 
            </table>
        </div>
    </div>
</div>