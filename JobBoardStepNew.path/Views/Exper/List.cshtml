@model List<ExperListViewModel>
@{
    int intson = 0;
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Datatable Experience</h6>
         <a asp-controller="Exper" asp-action="Create" class="btn btn-link btn-sm btn-rounded text-white btn-danger"><i class="fa fa-edit" aria-hidden="true"></i>Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr style="text-align:center">
                        <th>T/R</th>
                        <th>Name</th>
                        <th>Language</th>
                        <th>CreateDate</th>
                        <th>UpdateDate</th>
                        <th>InformationStatus</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        intson += 1;
                        <tr style="text-align:center">
                            <td>
                                @intson
                            </td>
                            <td>@item.ExperName</td>
                            <td>@item.Langname</td>
                            <td>@item.CareateDate</td>
                            <td>@item.UpdateDate</td>
                            <td>@item.ExperienceStatus</td>
                            <td>
                                <a href="#" class="btn btn-link btn-sm btn-rounded text-success"><i class="fa fa-edit" aria-hidden="true"></i> View</a>
                                <a asp-controller="Exper" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-sm btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                <form class="btn btn-sm-1" asp-controller="Exper" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-link btn-rounded text-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody> 
            </table>
        </div>
    </div>
</div>